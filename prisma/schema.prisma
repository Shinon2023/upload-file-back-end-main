generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  UserID      Int     @id @default(autoincrement())
  Name        String
  Prefix      String
  Faculty     String
  Course      String
  Email       String  @unique
  PhoneNumber String?
  Password    String
  Bio         String?
  forms       Form[]
  Role        Role
}

enum Role {
  ADMIN
  USER
}

model SubmitDate {
  id      String   @id @default(uuid()) @db.Uuid
  date    DateTime @db.Timestamp(0)
  endDate DateTime @db.Timestamp(0)
}

