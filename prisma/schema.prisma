model Form {
  id         String       @id @default(uuid()) @db.Uuid
  level      Int
  userId     Int
  user       Users        @relation(fields: [userId], references: [UserID])
  submitDate DateTime     @default(now())
  UploadFile UploadFile[]
}

model UploadFile {
  id       String @id @default(uuid()) @db.Uuid
  formId   String @db.Uuid
  form     Form   @relation(fields: [formId], references: [id])
  File     File[]
}

model File {
  id           String     @id @default(uuid()) @db.Uuid
  fileName     String
  uploadFileId String     @db.Uuid
  uploadFile   UploadFile @relation(fields: [uploadFileId], references: [id])
}

model Course {
  CourseID   Int    @id @default(autoincrement())
  CourseName String
}

model Faculty {
  FacultyID   Int    @id @default(autoincrement())
  FacultyName String
}
